---
import Analytics from '@vercel/analytics/astro'
import SpeedInsights from "@vercel/speed-insights/astro"
import Navbar from "../components/Navbar";
import NewsWidget from "../components/NewsWidget.astro";
import Footbar from "../components/Footbar.astro";
const { title, image, writer, date } = Astro.props;

import '@fontsource/bitter'
import '../styles/globals.css'
import '../styles/bstyles.css'
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" 
              href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css" 
              integrity="sha384-nB0miv6/jRmo5UMMR1wu3Gz6NLsoTkbqJghGIsx//Rlm+ZU03BU6SQNC66uf4l5+" 
              crossorigin="anonymous">
		<title>{title}</title>
	</head>
	<body>
        <main>
        <Navbar active="notes" client:load />
        <div class="container-fluid flex flex-wrap bg-white pb-8 px-20">
            <div class="w-full">
            <!-- <div class="order-2 md:order-1 w-full md:w-1/4 gx-5">
            <NewsWidget></NewsWidget>
            </div>
            <div class="order-1 md:order-2 w-full md:w-3/4 gx-5"> -->
                <div class="mx-4">
                    <div class="cover-image mt-4" style={{ backgroundImage: `url(${image})` }}></div>
                    <h1 class="display-1 mt-5">{title}</h1>
                    <p id="frontmatter"><b>{date}</b><br />
                        <b>{writer}</b><br />
                    <slot />
                </div>
            </div>
            <br />
        </div>
        </main>
        <Footbar></Footbar>
        <Analytics />
        <SpeedInsights />
    </body>
</html>