---
export const prerender = false;

import { getEntry, render } from "astro:content";

import LectureNotesLayout from "../../layouts/LectureNotesLayout.astro";

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/404");
}

const post = await getEntry("notes", slug);

if (!post) {
  return Astro.redirect("/404");
}

const { Content } = await render(post);
---

<LectureNotesLayout {...post.data}>
  <Content />
</LectureNotesLayout>